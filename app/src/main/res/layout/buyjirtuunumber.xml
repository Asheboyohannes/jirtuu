<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Buy Jirtuu Number"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:text="Where would you like to have a phone number?"
                android:textColor="@color/black_color"
                android:textSize="16dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/backgroundspin"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/countriesspin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/drop" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/priceview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:padding="10dp"

                    android:text="Select a plan"
                    android:textColor="@color/black_color"
                    android:textSize="16dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"

                    android:layout_marginRight="16dp"
                    android:background="@drawable/backgroundspin"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/planspin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/drop" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:padding="10dp"

                    android:text="Select Number"
                    android:textColor="@color/black_color"
                    android:textSize="16dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"

                    android:layout_marginRight="16dp"
                    android:background="@drawable/backgroundspin"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/numberspin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/drop" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/forwardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frwardnote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"

                    android:textColor="@color/primary_dark_color"
                    android:text="* Your number comes with free an unlimited voicemail.If you like to forward the incoming call , where should  be forwarded."

                    android:textSize="11dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"

                    android:text="Where should incoming calls be forwarded to?"

                    android:textColor="@color/black_color"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/assistant_button"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/yourcellno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Your Cell Phone"
                        android:textColor="@color/black_color" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black_color" />

                    <TextView
                        android:id="@+id/othercellno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"

                        android:text="Other Phone Number"
                        android:textColor="@color/black_color" />


                </LinearLayout>



                <TextView
                    android:id="@+id/mynumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black_color"
                    android:text=""/>


                <LinearLayout
                    android:id="@+id/othernum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/labeltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="10dp"
                        android:text="External Number"
                        android:textColor="@color/primary_color" />

                    <LinearLayout
                        android:id="@+id/exter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/assistant_button"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/countrypick"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="10dp"
                            android:src="@drawable/dropdown"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"/>

                        <EditText
                            android:id="@+id/external_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/white_color"
                            android:hint="Write your external number here"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLines="1"

                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black_color" />

                    </LinearLayout>





                </LinearLayout>




            </LinearLayout>


            <com.warkiz.widget.IndicatorStayLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp">
                <!--your layout-->
                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_indicator_color="@color/primary_dark_color"
                    app:isb_indicator_text_color="@color/white_color"
                    app:isb_indicator_text_size="18sp"
                    app:isb_max="1000"
                    app:isb_min="0"
                    app:isb_only_thumb_draggable="false"
                    app:isb_progress="0"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_show_tick_marks_type="oval"
                    app:isb_show_tick_texts="true"
                    app:isb_thumb_color="@color/primary_color"
                    app:isb_thumb_size="20dp"
                    app:isb_tick_marks_drawable="@mipmap/ic_launcher"
                    app:isb_tick_marks_size="13dp"
                    app:isb_tick_texts_color="@color/black_color"
                    app:isb_tick_texts_size="15sp"
                    app:isb_ticks_count="0"
                    app:isb_track_background_color="@color/grey_color"
                    app:isb_track_background_size="2dp"
                    app:isb_track_progress_color="@color/primary_color"
                    app:isb_track_progress_size="4dp" />
                <!--your layout-->
            </com.warkiz.widget.IndicatorStayLayout>


            <TextView
                android:id="@+id/lubal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="incoming calls per month"
                android:textColor="@color/black_color"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/lubal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Monthly fee(payment due now)"
                android:textColor="@color/black_color"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/lubal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Call forwarding (will be charged when the minute is used)"
                android:textColor="@color/black_color"
                android:textSize="11dp" />


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/carView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white_color"
                cardView:cardCornerRadius="20dp"
                cardView:cardElevation="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_color">


                    <TextView
                        android:id="@+id/pswait"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Please Wait..."
                        android:textColor="@color/white_color"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="10dp"
                                android:text="Price"
                                android:textColor="@color/black_color"

                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/bookIconImageView"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="top"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:contentDescription="@null"
                                android:src="@mipmap/ic_launcher"
                                android:visibility="gone" />


                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"

                                    android:padding="10dp"
                                    android:text="Destination"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/destination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:padding="10dp"

                                    android:text=""
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"

                                    android:padding="10dp"
                                    android:text="Destination Fee"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:padding="10dp"

                                    android:text="$0.007788"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"

                                    android:padding="10dp"
                                    android:text="Monthly Fee"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/monthly_fee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:padding="10dp"

                                    android:text="$0.00"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">


                                <TextView
                                    android:id="@+id/incominglabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"

                                    android:padding="10dp"
                                    android:text="Incoming calls (0 minutes)"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/incoming"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:padding="10dp"

                                    android:text="$0.00"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">


                                <TextView
                                    android:id="@+id/forwardinglabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:padding="10dp"
                                    android:text="Call Forwarding (0 minutes)"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/forwarding"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:padding="10dp"

                                    android:text="$0.00"
                                    android:textColor="@color/black_color"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/totalemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="@color/black_color"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"

                                    android:layout_marginBottom="30dp"
                                    android:paddingLeft="10dp"
                                    android:text="Estimated monthly cost"
                                    android:textColor="@color/black_color"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <Button
                                android:id="@+id/getthisnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="30dp"
                                android:background="@drawable/assistant_button"
                                android:text="Get this number" />


                        </LinearLayout>


                    </LinearLayout>


                </FrameLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>